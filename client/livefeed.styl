@import '/normalize.css'



*
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box



@font-face
    font-family 'Monospace821BTRoman'
    src:    url('https://dl.dropbox.com/u/2843402/GRA/livefeed/fonts/Monospace821BT/font_-_truetype_-_monospace_821_bt-webfont.woff') format('woff'),
            url('https://dl.dropbox.com/u/2843402/GRA/livefeed/fonts/Monospace821BT/font_-_truetype_-_monospace_821_bt-webfont.ttf') format('truetype'),
            url('https://dl.dropbox.com/u/2843402/GRA/livefeed/fonts/Monospace821BT/font_-_truetype_-_monospace_821_bt-webfont.svg') format('svg')
    font-weight normal
    font-style normal



body
    color black
    font-family arial, helvetica
    font-size 21px
    line-height 24px
    margin 1em
    
a
    color black
    text-decoration none
    
p
    margin 0
    margin-bottom 1em
    
hr
    border 0
    border-bottom 1px solid
    margin 0
    margin-top 1em
    margin-bottom 1em



input.delete
    color red


                
.label
    font-family 'Monospace821BTRoman'
    letter-spacing -1px
    font-size 30px
    line-height 30px
    position fixed
    text-align center
    width 33%
    text-transform uppercase
    
.label#opinion
    left 0
    bottom 1em
    width 100%
    
.label#cast
    top 1em
    right 21px

#back
    position fixed
    top 1em
    left 1em


table#feeds
    width 100%
    tr
        vertical-align top
        
    th, td
        width 33%
        text-align center
        font-weight normal
        padding-bottom 1em
        
    th
        padding-bottom 3em
    
    th
        text-transform uppercase
    
    td.situation
        text-transform uppercase
        div.name
            margin-bottom 1em
        div.authors
            text-align left
    
    td.time
        text-transform uppercase
        div.date
            font-family helvetica, arial
            font-size 144px
            line-height 122px
    
    td.cast
        text-transform uppercase
        ul
            margin 0
            padding 0
            list-style none
            li
                margin 0
                padding 0

table#feeds.list
    font-family 'Monospace821BTRoman'
    letter-spacing -1px
    font-size 30px
    line-height 30px
      
table#feeds.edit
    td
        text-align left
        padding-top 1em
        border-bottom 1px solid
        
    td.cast
        ul
            margin-bottom 1em


div#posts
    div#info
        position fixed
        width 33%
        text-align center
        left 33%
        top 50%
        margin-top -80px
        
        span.name
            text-transform uppercase
        
        ul#characters
            list-style none
            margin 0
            padding 0
            
    ol.posts
        position fixed
        margin 0
        padding 1em
        list-style none
        overflow auto
        
    ol.posts#situation
        font-family courier, monospace
        color blue
        top 0
        left 0
        font-size 16px
        line-height 16px
        padding-top 90px
        width 33%
        height 65%
        
    ol.posts#cast
        top 0
        right 0
        padding-top 90px
        width 33%
        height 65%
        color blue
        text-align center
        span.character_name
            display block
            font-family 'Monospace821BTRoman', monospace
            letter-spacing -1px
            font-size 30px
            line-height 30px
            text-transform uppercase
            color black
            
        span.body
            font-family times, serif
            font-style italic
            font-size 30px
            line-height 30px
            display block
            margin-bottom 1em
        
    ol.posts#opinion
        color blue
        bottom 0
        left 0
        width 100%
        height 35%
        span.character_name
            font-family 'Monospace821BTRoman', monospace
            letter-spacing -1px
            font-size 30px
            line-height 30px
            text-transform uppercase
            color black
            
div#new_post
    ul#characters
        margin 0
        padding 0
        list-style none
        
    span.name
        text-transform uppercase
        
    p.last_post
        color #999